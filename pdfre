    <script>
        const uploadArea = document.getElementById('upload-area');
        const fileInput = document.getElementById('file-input');
        const fileInfo = document.getElementById('file-info');
        const fileName = document.getElementById('file-name');
        const fileSize = document.getElementById('file-size');
        const decryptBtn = document.getElementById('decrypt-btn');
        const downloadBtn = document.getElementById('download-btn');
        const progressContainer = document.getElementById('progress-container');
        const progress = document.getElementById('progress');
        const result = document.getElementById('result');
        
        let pdfFile = null;
        let decryptedPdfData = null;
        
        // ä¸Šä¼ åŒºåŸŸç‚¹å‡»äº‹ä»¶
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });
        
        // æ‹–æ‹½äº‹ä»¶
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.7)';
            uploadArea.style.background = 'rgba(255, 255, 255, 0.05)';
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.3)';
            uploadArea.style.background = 'transparent';
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.3)';
            uploadArea.style.background = 'transparent';
            
            if (e.dataTransfer.files.length) {
                handleFile(e.dataTransfer.files[0]);
            }
        });
        
        // æ–‡ä»¶é€‰æ‹©äº‹ä»¶
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                handleFile(fileInput.files[0]);
            }
        });
        
        // å¤„ç†æ–‡ä»¶
        function handleFile(file) {
            if (file.type !== 'application/pdf' && !file.name.endsWith('.pdf')) {
                alert('è¯·é€‰æ‹©PDFæ–‡ä»¶');
                return;
            }
            
            if (file.size > 30 * 1024 * 1024) {
                alert('æ–‡ä»¶å¤§å°ä¸èƒ½è¶…è¿‡30MB');
                return;
            }
            
            pdfFile = file;
            fileName.textContent = `æ–‡ä»¶å: ${file.name}`;
            fileSize.textContent = `æ–‡ä»¶å¤§å°: ${formatFileSize(file.size)}`;
            fileInfo.style.display = 'block';
            decryptBtn.disabled = false;
        }
        
        // æ ¼å¼åŒ–æ–‡ä»¶å¤§å°
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        // è§£å¯†æŒ‰é’®ç‚¹å‡»äº‹ä»¶
        decryptBtn.addEventListener('click', async () => {
            if (!pdfFile) return;
            
            decryptBtn.disabled = true;
            progressContainer.style.display = 'block';
            result.style.display = 'none';
            downloadBtn.style.display = 'none';
            
            try {
                await decryptPdf(pdfFile);
            } catch (error) {
                console.error('è§£å¯†å¤±è´¥:', error);
                alert('è§£å¯†å¤±è´¥: ' + error.message);
                progressContainer.style.display = 'none';
                decryptBtn.disabled = false;
            }
        });
        
        // ä¸‹è½½æŒ‰é’®ç‚¹å‡»äº‹ä»¶
        downloadBtn.addEventListener('click', () => {
            if (decryptedPdfData) {
                const blob = new Blob([decryptedPdfData], { type: 'application/pdf' });
                download(blob, pdfFile.name.replace('.pdf', '_decrypted.pdf'), 'application/pdf');
            }
        });
        
        // PDFè§£å¯†å‡½æ•°
        async function decryptPdf(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                
                reader.onload = async (e) => {
                    try {
                        const arrayBuffer = e.target.result;
                        
                        // æ›´æ–°è¿›åº¦
                        updateProgress(20);
                        
                        // ä½¿ç”¨libpopperè§£å¯†PDF
                        const pdfDoc = await PDFLib.PDFDocument.load(arrayBuffer);
                        
                        updateProgress(40);
                        
                        // ç§»é™¤æ‰€æœ‰æƒé™é™åˆ¶
                        const pdfBytes = await pdfDoc.save({
                            encryption: {
                                userPassword: '',
                                ownerPassword: '',
                                permissions: {
                                    print: 'highResolution',
                                    modify: true,
                                    copy: true,
                                    annotate: true,
                                    fillForms: true,
                                    extractContent: true,
                                    assembleDocument: true,
                                    printLowResolution: true
                                }
                            }
                        });
                        
                        updateProgress(80);
                        
                        decryptedPdfData = pdfBytes;
                        
                        updateProgress(100);
                        
                        setTimeout(() => {
                            progressContainer.style.display = 'none';
                            result.style.display = 'block';
                            downloadBtn.style.display = 'inline-block';
                            resolve();
                        }, 500);
                        
                    } catch (error) {
                        reject(error);
                    }
                };
                
                reader.onerror = (error) => {
                    reject(error);
                };
                
                reader.readAsArrayBuffer(file);
            });
        }
        
        // æ›´æ–°è¿›åº¦æ¡
        function updateProgress(percent) {
            progress.style.width = percent + '%';
        }
    </script>
